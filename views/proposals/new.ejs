<%- include('../../partials/header') %>

<div class="container top-buffer">
    <!-- If there are any errors when upload image -->
    <span class="error"><%= typeof msg !== 'undefined' ? msg : '' %></span>
    
    <form action="/proposals" method="POST" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input type="text" name="title" maxlength="20" required>
        <label for="description">Description:</label>
        <textarea name="description" cols="50" rows="6" required></textarea>

        <div class="file-field input-field">
            <div class="btn blue-grey">
                <span>Image File</span>
                <input type="file" name="image" required>
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
            </div>
        </div>
        <button class="btn waves-effect waves-light teal" type="submit">Submit 
            <i class="material-icons right">send</i></button>
    </form>
</div>


<%- include('../../partials/footer') %>